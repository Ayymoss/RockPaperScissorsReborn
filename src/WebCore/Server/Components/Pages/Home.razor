@page "/"
@using Radzen
@attribute [RenderModeInteractiveServer]

<PageTitle>Rock Paper Scissors</PageTitle>

<CascadingValue Value="_player">
    <RadzenRow JustifyContent="JustifyContent.Center">
        <RadzenColumn SizeSM="12" SizeMD="4">
            <GameWrapper OnPlayerChanged="OnPlayerUpdated" OnStartMultiplayer="OnMultiplayerStarted"/>
        </RadzenColumn>
        <RadzenColumn SizeSM="12" SizeMD="4">
            <RadzenRow>
                <RadzenColumn SizeSM="12">
                    <Profile OnPlayerChanged="OnPlayerUpdated" LatencyInMilliseconds="_latencyInMilliseconds" OnlinePlayers="_onlinePlayers"/>
                </RadzenColumn>
                <RadzenColumn SizeSM="12">
                    <Leaderboard @ref="_leaderboardComponent"/>
                </RadzenColumn>
            </RadzenRow>
        </RadzenColumn>
    </RadzenRow>
</CascadingValue>
