@using Radzen

<RadzenCard>
    <RadzenStack Orientation="Orientation.Vertical">
        <RadzenText Text="Player Info" TextStyle="TextStyle.DisplayH6" class="rz-mb-0"/>
        <RadzenStack Orientation="Orientation.Vertical">
            <RadzenRow AlignItems="AlignItems.Center">
                <RadzenColumn Size="12" SizeMD="6">
                    <RadzenLabel Text="Username"/>
                </RadzenColumn>
                <RadzenColumn Size="12" SizeMD="6">
                    @if (!ClientPageService.IsNameProvided)
                    {
                        <RadzenStack Orientation="Orientation.Vertical">
                            <RadzenTextBox Change="@(UpdateUserName)"/>
                            @if (!string.IsNullOrWhiteSpace(_nameError))
                            {
                                <RadzenText Text="@_nameError" class="rz-mb-0"/>
                            }
                        </RadzenStack>
                    }
                    else
                    {
                        <RadzenText Text="@ClientPageService.UserName" class="rz-mb-0"/>
                    }
                </RadzenColumn>
            </RadzenRow>
            @if (ClientPageService.IsNameProvided)
            {
                <RadzenRow AlignItems="AlignItems.Center">
                    <RadzenColumn Size="12" SizeMD="6">
                        <RadzenLabel Text="Placement"/>
                    </RadzenColumn>
                    <RadzenColumn Size="12" SizeMD="6">
                        <RadzenText Text="@ClientPageService.Streak.ToString()" class="rz-mb-0"/>
                    </RadzenColumn>
                </RadzenRow>
                <RadzenRow AlignItems="AlignItems.Center">
                    <RadzenColumn Size="12" SizeMD="6">
                        <RadzenLabel Text="Session ID"/>
                    </RadzenColumn>
                    <RadzenColumn Size="12" SizeMD="6">
                        <RadzenText Text="@ClientPageService.SessionId" class="rz-mb-0"/>
                    </RadzenColumn>
                </RadzenRow>
            }
        </RadzenStack>
    </RadzenStack>
</RadzenCard>
