@using Radzen
@attribute [RenderModeInteractiveServer]

<RadzenCard>
    @if (!ClientPageService.IsNameProvided)
    {
        <RadzenText Text="Please enter a username before continuing..." class="rz-mb-0"/>
    }
    else
    {
        <RadzenStack Orientation="Orientation.Vertical" JustifyContent="JustifyContent.Center">
            <RadzenText Text="Rock Paper Scissors" TextStyle="TextStyle.DisplayH6" class="rz-mb-0"/>
            <RadzenStack Orientation="Orientation.Horizontal" JustifyContent="JustifyContent.Center">
               <RadzenButton Text="Rock" Icon="public" ButtonStyle="ButtonStyle.Info" />
               <RadzenButton Text="Paper" Icon="note" ButtonStyle="ButtonStyle.Info" />
               <RadzenButton Text="Scissors" Icon="content_cut" ButtonStyle="ButtonStyle.Info" />
            </RadzenStack>
        </RadzenStack>
    }
</RadzenCard>
